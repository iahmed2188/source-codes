    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        jTextField1.setText(null);
        jTextField2.setText(null);
        jTextField3.setText(null);
        jTextField4.setText(null);
        jTextField5.setText(null);
        jTextArea1.setText(null);
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        closeConnection();
        System.exit(0); 
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        try {
            
            //update the database
            statement.executeUpdate("INSERT INTO `abcinc`.`employees`"
                    + "(`EmployeeID`,`First_Name`,`Last_Name`,`Birthday`,`Dept_Name`)VALUES("
                    + "'" + jTextField1.getText() + "'," 
                    + "'" + jTextField2.getText() + "'," 
                    + "'" + jTextField3.getText() + "'," 
                    + "'" + jTextField4.getText() + "',"
                    + "'" + jTextField5.getText() + "');");
            
            //display the information 
            str =   jTextField1.getText() + "\t" +  
                    jTextField2.getText() + "\t" +
                    jTextField3.getText() + "\t" +
                    jTextField4.getText() + "\t" +
                    jTextField5.getText() + "\t\n";
           
            jTextArea1.setText(str);
           
           JOptionPane.showMessageDialog(null, "Successful Update!!!", "Database Messages",
           JOptionPane.OK_OPTION);
        
        }catch(SQLException error){
          JOptionPane.showMessageDialog( null, error.getMessage(), "Database Messages",
          JOptionPane.ERROR_MESSAGE );
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try {
            statement.executeUpdate("DELETE FROM `abcinc`.`employees` WHERE `EmployeeID`=" + "'" + jTextField1.getText()+ "'");
            jTextArea1.setText(null);
            
            JOptionPane.showMessageDialog(null, "Successful Update!!!", "Database Messages",
            JOptionPane.OK_OPTION);
        }
        catch(SQLException error){
            JOptionPane.showMessageDialog( null, error.getMessage(), "Database Messages",
            JOptionPane.ERROR_MESSAGE );
        }
    }                                        

