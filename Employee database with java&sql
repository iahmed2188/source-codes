    //Declare database variables
    private Connection  connection;
    private Statement   statement;
    private ResultSet   resultSet;
    private String      str;
       
    private void dbConnect(){
        try {
            //load MySQL sun driver class
            Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");

            //Connect to the database --MySQL Commands
            connection = DriverManager.getConnection("jdbc:odbc:abcinc");
            
            JOptionPane.showMessageDialog(null, "Connection Successful !!!!\n",
                    "Database Messages",
            JOptionPane.OK_OPTION);

            //Create a ResultSet
            statement = connection.createStatement();
            resultSet = statement.executeQuery("Select * from employees;");

            DisplayRecords(resultSet);
        
        }catch (ClassNotFoundException error){
            
            JOptionPane.showMessageDialog( null, error.getMessage(), "Database error",
            JOptionPane.ERROR_MESSAGE );
                    
        }catch(SQLException error){
            JOptionPane.showMessageDialog( null, error.getMessage(), "Database error",
            JOptionPane.ERROR_MESSAGE );
        }
    }

    private void DisplayRecords(ResultSet resultSet){ 
        try {
            while(resultSet.next()){ 
                str =   resultSet.getString("EmployeeID")+ "\t"+
                        resultSet.getString("First_Name")+ "\t"+
                        resultSet.getString("Last_Name") + "\t"+
                        resultSet.getString("Birthday")  + "\t"+
                        resultSet.getString("Dept_Name");
		
                jTextArea1.append(str + "\n");
            }
	}
	catch (SQLException error){
            JOptionPane.showMessageDialog( null, error.getMessage(), "Database error",
            JOptionPane.ERROR_MESSAGE );
	}
    }
      
    private void closeConnection(){
        //terminate the connection and save data
        try {
            if (connection != null){
                connection.close();
            }
            
            //display a message
            JOptionPane.showMessageDialog(null, "Connection Closed !!!!\n", "Database Messages",
            JOptionPane.OK_OPTION);

        }catch(SQLException error){
            JOptionPane.showMessageDialog( null, error.getMessage(), "Database error",
            JOptionPane.ERROR_MESSAGE );
        }
	
    }

    
